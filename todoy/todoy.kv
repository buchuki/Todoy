
ScreenManager:
    Screen:
        name: 'today_screen'
        GestureContainer:
            Label:
                text: "Todo List"
    Screen:
        name: 'add_todo_screen'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Add Habit"
                on_press: root.current = 'add_habit_screen'
            Button:
                text: "Add Commitment"
            Button:
                text: "Add Appointment"
            Button:
                text: "Add Goal"
            Button:
                text: "Add Task"
    Screen:
        name: 'add_habit_screen'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                Label:
                    text: 'Habit Name'
                TextInput:
                    id: 'habit_name'
            Button:
                text: 'Cancel'
                on_press: root.current = 'today_screen'

